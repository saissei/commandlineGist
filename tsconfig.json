{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "esnext",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["esnext"],
    "types": ["node", "jest"],
    "baseUrl": "./src/",
    "paths": {
      "#/*": ["*"]
    }
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "public", "views", "*.test.ts", "__tests__", "dist"],
  "compileOnSave": false
}
